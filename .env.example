# ── Server ────────────────────────────────────────────────────────────────────
PORT=8080

# ── Frontend (Docker only) ────────────────────────────────────────────────────
FRONTEND_PORT=80
# URL the browser uses to reach the API (used at image build time by Vite)
VITE_API_URL=http://localhost:8080

# ── Arweave ───────────────────────────────────────────────────────────────────
ARWEAVE_KEY=your_arweave_key

# ── Polygon Blockchain ────────────────────────────────────────────────────────
POLYGON_RPC_URL=https://rpc-amoy.polygon.technology
PRIVATE_KEY=your_private_key
CONTRACT_ADDRESS=your_contract_address
POLYGON_CHAIN_ID=80002

# ── JWT ───────────────────────────────────────────────────────────────────────
JWT_SECRET_KEY=your_secret_key
JWT_EXP_HOURS=24

# ── Database ──────────────────────────────────────────────────────────────────
# Host is "db" when running via docker-compose, "localhost" for local dev
APP_DB_HOST=localhost
APP_DB_PORT=5432
DB_PORT=5432
APP_DB_USERNAME=blockcertify
APP_DB_PASSWORD=blockcertify
APP_DB_NAME=blockcertify